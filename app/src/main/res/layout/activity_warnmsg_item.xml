<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/tvWarnDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模块："
            android:textColor="#333333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvWarnContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="消息内容："
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_below="@+id/tvWarnDev"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tvWarnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvWarnContent"
            android:layout_marginTop="20dp"
            android:text="发送消息时间："
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:id="@+id/tvWarnLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dcdcdc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvWarnTime"
            android:layout_marginTop="23dp"
            />
        <LinearLayout
            android:id="@+id/llIDo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/tvWarnLine"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/common_purple_color"
                android:textSize="16sp"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5f5f5"
        />

</LinearLayout>