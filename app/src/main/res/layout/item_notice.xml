<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="75dp">


        <ImageView
            android:id="@+id/ivNotice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/notice_icon" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivNotice"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_toEndOf="@+id/ivNotice"
            android:layout_toRightOf="@+id/ivNotice"
            android:text="放假通知"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPubOrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_alignBottom="@+id/ivNotice"
            android:text="福利院"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="2020-03-16"
            android:textColor="#999999"
            android:textSize="12sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rlItem"
        android:background="#dcdcdc" />

</LinearLayout>